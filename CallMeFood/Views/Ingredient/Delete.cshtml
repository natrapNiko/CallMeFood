@using CallMeFood.ViewModels.IngredientViewModels

@model IngredientEditViewModel

<h2>Delete Ingredient</h2>

<p>Are you sure you want to delete the ingredient: <strong>@Model.Name</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.RecipeId" class="btn btn-secondary">Cancel</a>
</form>

