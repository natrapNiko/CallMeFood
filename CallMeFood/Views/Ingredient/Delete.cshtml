@using CallMeFood.ViewModels.IngredientViewModels

@model IngredientViewModel

@{
    ViewData["Title"] = "Delete Ingredient";
}

<h2>Delete Ingredient</h2>

<div>
    <h4>Are you sure you want to delete this ingredient?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.RecipeId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
