@using CallMeFood.ViewModels.ErrorViewModels
@model Error500ViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Server Error (500)";
}

<div class="container text-center my-5">
    <h1 class="display-1 text-danger">500</h1>
    <h2>Something went wrong.</h2>
    <p class="lead">Sorry, an unexpected error has occurred. Please try again later.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
</div>
