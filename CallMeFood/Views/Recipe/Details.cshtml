@using CallMeFood.ViewModels
@model RecipeDetailsViewModel
@{
    ViewData["Title"] = "Recipe Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title" style="object-fit: cover; height: 100%; width: 100%;" />
                </div>
            }
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <p class="text-muted mb-1"><strong>Category:</strong> @Model.CategoryName</p>
                    <p class="text-muted mb-1"><strong>Author:</strong> @Model.AuthorName</p>
                    <p class="text-muted mb-1"><strong>Created On:</strong> @Model.CreatedOn.ToString("yyyy-MM-dd")</p>

                    <hr />

                    <h5>Description</h5>
                    <p>@Model.Description</p>

                    <h5>Instructions</h5>
                    <p>@Model.Instructions</p>

                    <a asp-action="Index" class="btn btn-outline-secondary mt-3">Back to Recipes</a>
                </div>
            </div>
        </div>
    </div>
</div>
