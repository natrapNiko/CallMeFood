@using CallMeFood.ViewModels
@model RecipeDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Category:</strong> @Model.CategoryName</p>
<p><strong>Author:</strong> @Model.AuthorName</p>
<p><strong>Created On:</strong> @Model.CreatedOn.ToString("yyyy-MM-dd")</p>
<p><strong>Instructions:</strong> @Model.Instructions</p>

@if (Model.Ingredients != null && Model.Ingredients.Any())
{
    <p><strong>Ingredients:</strong></p>
    <ul>
        @foreach (var ingredient in Model.Ingredients)
        {
            <li>@ingredient</li>
        }
    </ul>
}

@if (Model.Comments != null && Model.Comments.Any())
{
    <p><strong>Comments:</strong></p>
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>@comment</li>
        }
    </ul>
}

@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="Image for @Model.Title" style="max-width:250px; max-height:180px;" />
}
