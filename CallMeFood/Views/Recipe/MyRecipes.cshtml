@using CallMeFood.ViewModels.RecipeViewModels
@model IEnumerable<RecipeListItemViewModel>
@{
    ViewData["Title"] = "My Recipes";
}

<h2>My Recipes</h2>

@if (!Model.Any())
{
        <p>You haven't added any recipes yet.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var recipe in Model)
            {
                        <tr>
                            <td>@recipe.Title</td>
                            <td>@recipe.CategoryName</td>
                            <td>@recipe.CreatedOn.ToShortDateString()</td>
                            <td>
                                <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info btn-sm">View</a>
                                <a asp-controller="Recipe" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-controller="Recipe" asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
